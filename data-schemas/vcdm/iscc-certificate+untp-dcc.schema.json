{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fidescommunity.github.io/FIDES-credential-schemas/data-schemas/vcdm/iscc-certificate+untp-dcc.schema.json",
  "$comment": "ISCC surface names; UNTP semantics via contexts/iscc-certificate+untp-dcc.context.jsonld and cf-vocab-mapping.v1.jsonld.",
  "title": "ISCC Certificate – UNTP-mapped (CredentialSubject)",
  "type": "object",
  "additionalProperties": true,

  "required": [
    "certificateNumber",
    "certifiedParty",
    "cab",
    "validFrom",
    "validUntil",
    "scheme"
  ],

  "properties": {
    "certificateNumber": {
      "type": "string",
      "title": "ISCC Certificate Number (→ UNTP DCC certificateId)",
      "examples": ["ISCC-EU-PL-123456789"]
    },
    "certifiedParty": {
      "type": "string",
      "title": "Certified Organization (→ UNTP DCC assessedParty) — name, DID or URL",
      "examples": [
        "Van Kessel Olie B.V.",
        "did:web:van-kessel.nl",
        "https://bluepages.example.org/org/van-kessel"
      ]
    },
    "cab": {
      "type": "string",
      "title": "Conformity Assessment Body (→ UNTP DCC conformityAssessmentBody) — name, DID or URL",
      "examples": [
        "Control Union Certifications B.V.",
        "did:web:control-union.example",
        "https://bluepages.example.org/cab/control-union"
      ]
    },
    "scheme": {
      "type": "string",
      "title": "ISCC Scheme",
      "enum": ["ISCC EU", "ISCC PLUS", "ISCC CORSIA"],
      "examples": ["ISCC EU"]
    },
    "certificateType": {
      "type": "string",
      "title": "Certificate Type"
    },
    "scope": {
      "type": "string",
      "title": "Conformity/Certified Scope (→ UNTP DCC conformityScope)",
      "examples": ["Trading and distribution of biofuels (mass balance)"]
    },
    "siteCountry": {
      "type": "string",
      "title": "Country (ISO 3166-1 alpha-2)",
      "pattern": "^[A-Z]{2}$",
      "examples": ["NL"]
    },
    "validFrom": {
      "type": "string",
      "format": "date",
      "title": "Valid from (→ UNTP Core validFrom)",
      "examples": ["2025-01-15"]
    },
    "validUntil": {
      "type": "string",
      "format": "date",
      "title": "Valid until (→ UNTP Core validUntil)",
      "examples": ["2026-01-14"]
    },
    "reference": {
      "type": "string",
      "format": "uri",
      "title": "Public certificate / document URL (→ UNTP Core documentReference)",
      "examples": ["https://iscc-system.org/certificates/ISCC-EU-PL-123456789.pdf"]
    },
    "referenceStandard": {
      "type": "string",
      "title": "Reference Standard (UNTP DCC)",
      "examples": ["ISCC EU 4.0", "ISO 14064-1", "RED II Annex V/VI"]
    }
  }
}
