{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "DomainLinkageCredential",
  "type": "object",
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 2,
      "contains": {
        "enum": [
          "DomainLinkageCredential"
        ]
      }
    },
    "issuer": {
      "type": "string"
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "origin": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "id",
        "origin"
      ]
    },
    "proof": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "proofPurpose": {
          "type": "string"
        },
        "verificationMethod": {
          "type": "string"
        },
        "jws": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "created",
        "proofPurpose",
        "verificationMethod",
        "jws"
      ]
    }
  },
  "required": [
    "@context",
    "id",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject",
    "proof"
  ]
}