{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fidescommunity.github.io/FIDES-credential-schemas/data-schemas/vcdm/helloworld.schema.json",
  "$comment": "Semantics: https://fidescommunity.github.io/FIDES-credential-schemas/contexts/helloworld.context.jsonld",
  "title": "HelloWorld Credential Subject",
  "description": "JSON Schema for the credentialSubject of HelloWorldCred (firstname, lastname).",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "id": {
      "type": "string",
      "title": "Identifier",
      "examples": [
        "123"
      ],
      "minLength": 1
    }
    "firstname": {
      "type": "string",
      "title": "First name",
      "examples": ["Ruud"],
      "minLength": 1
    },
    "lastname": {
      "type": "string",
      "title": "Last name",
      "examples": ["Gullit"],
      "minLength": 1
    }
  },
  "required": ["id","firstname", "lastname"]
}
