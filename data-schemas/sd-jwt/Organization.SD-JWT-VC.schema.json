{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Organization SD-JWT VC Payload",
  "description": "Schema for an SD-JWT VC payload that carries organization claims. Includes registered SD-JWT VC fields like iss/iat/vct/cnf. Application claims are at top-level (legalName, url, etc.).",
  "type": "object",
  "properties": {
    "iss": {
      "type": "string"
    },
    "iat": {
      "type": "integer"
    },
    "nbf": {
      "type": "integer"
    },
    "exp": {
      "type": "integer"
    },
    "vct": {
      "type": "string"
    },
    "sub": {
      "type": "string"
    },
    "cnf": {
      "type": "object",
      "properties": {
        "kid": {
          "type": "string"
        },
        "jwk": {
          "type": "object",
          "properties": {
            "kty": {
              "type": "string"
            },
            "crv": {
              "type": "string"
            },
            "x": {
              "type": "string"
            },
            "y": {
              "type": "string"
            },
            "n": {
              "type": "string"
            },
            "e": {
              "type": "string"
            }
          },
          "required": [
            "kty"
          ]
        }
      },
      "additionalProperties": true
    },
    "status": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "uri": {
          "type": "string"
        }
      }
    },
    "legalName": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "telephone": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "location": {
      "type": "object",
      "properties": {
        "address": {
          "type": "object",
          "properties": {
            "postalCode": {
              "type": "string"
            },
            "streetAddress": {
              "type": "string"
            },
            "addressLocality": {
              "type": "string"
            }
          },
          "required": [
            "streetAddress",
            "postalCode",
            "addressLocality"
          ]
        },
        "geo": {
          "type": "object",
          "properties": {
            "latitude": {
              "type": "string"
            },
            "longitude": {
              "type": "string"
            }
          },
          "required": [
            "latitude",
            "longitude"
          ]
        }
      },
      "required": [
        "address"
      ]
    }
  },
  "required": [
    "iss",
    "iat",
    "vct",
    "url",
    "email"
  ],
  "additionalProperties": true
}