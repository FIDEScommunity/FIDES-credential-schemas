{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Person Identification Data (PID)",
  "type": "object",
  "properties": {
    "family_name": { "type": "string" },
    "given_name": { "type": "string" },
    "birth_date": { "type": "string", "format": "date" },
    "family_name_birth": { "type": "string" },
    "given_name_birth": { "type": "string" },
    "birth_place": { "type": "string" },
    "birth_country": { "type": "string" },
    "birth_state": { "type": "string" },
    "birth_city": { "type": "string" },
    "resident_address": { "type": "string" },
    "resident_country": { "type": "string" },
    "resident_state": { "type": "string" },
    "resident_city": { "type": "string" },
    "resident_postal_code": { "type": "string" },
    "resident_street": { "type": "string" },
    "resident_house_number": { "type": "string" },
    "gender": { "type": "string", "enum": ["Male", "Female", "Other"] },
    "nationality": { "type": "string" },
    "document_number": { "type": "string" },
    "administrative_number": { "type": "string" },
    "issuing_country": { "type": "string" },
    "issuing_jurisdiction": { "type": "string" },
    "age_over_18": { "type": "boolean" },
    "age_over_21": { "type": "boolean" },
    "age_in_years": { "type": "integer", "minimum": 0 },
    "age_birth_year": { "type": "integer", "minimum": 1900 }
  },
  "required": [
    "family_name",
    "given_name",
    "birth_date",
    "birth_place",
    "nationality"
  ]
}
