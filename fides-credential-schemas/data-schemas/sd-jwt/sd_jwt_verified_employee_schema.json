{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SD-JWT VerifiedEmployee Claims",
  "type": "object",
  "required": [
    "given_name",
    "family_name",
    "employee_id",
    "employer"
  ],
  "properties": {
    "given_name": {
      "type": "string"
    },
    "family_name": {
      "type": "string"
    },
    "employee_id": {
      "type": "string",
      "description": "Unique identifier of the employee"
    },
    "employer": {
      "type": "string",
      "description": "Name of the employer organization"
    }
  }
}